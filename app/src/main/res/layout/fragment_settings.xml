<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.bntsoft.toastmasters.presentation.ui.common.settings.SettingsViewModel" />

        <variable
            name="user"
            type="com.bntsoft.toastmasters.domain.model.User" />

        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="88dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Profile Header Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="@color/surface_container_highest"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/outline_variant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp">

                        <!-- Profile Picture Section -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="2dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/profileImageView"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_person"
                                app:shapeAppearanceOverlay="@style/CircleImageView" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@{user != null ? (user.name.isEmpty() ? @string/guest_user : user.name) : @string/loading}"
                            android:textColor="@color/on_surface"
                            android:textSize="20sp"
                            app:visibleIf="@{!viewModel.uiState.isLoading}" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@{user != null ? user.email : @string/loading}"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="14sp"
                            app:visibleIf="@{!viewModel.uiState.isLoading}" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditProfile"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:enabled="@{!viewModel.uiState.isLoading}"
                            android:text="@string/edit_profile"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            android:textColor="@color/primary"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/outline"
                            app:strokeWidth="1dp"
                            app:visibleIf="@{user != null}" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- User Details Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/userDetailsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_container_high"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/outline_variant"
                    app:strokeWidth="1dp"
                    app:visibleIf="@{user != null}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="8dp"
                            android:text="@string/account_details"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/on_surface_variant" />

                        <!-- Joined Date -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/outline_variant"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvMemberSince"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/joined_date"
                            app:dateHelperText="@{user.joinedDate}" />

                        <!-- Role -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:background="@color/outline_variant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvUserRole"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_gender"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/role"
                            app:helperTextForRole="@{user.role.name}" />

                        <!-- Phone Number -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:background="@color/outline_variant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvPhoneNumber"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/phone_number"
                            app:helperTextOrDefault="@{user.phoneNumber}" />

                        <!-- Toastmasters ID -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:background="@color/outline_variant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvToastmastersId"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_toastmasters_id"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/toastmasters_id"
                            app:helperTextForToastmastersId="@{user.toastmastersId}" />

                        <!-- Club ID -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:background="@color/outline_variant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvClubId"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_people"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/club_id"
                            app:helperTextForClubId="@{user.clubId}" />

                        <!-- Address -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:background="@color/outline_variant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvAddress"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_location_on"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/address"
                            app:helperTextOrDefault="@{user.address}" />

                        <!-- Level -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:background="@color/outline_variant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvLevel"
                            style="@style/SettingItemStyle"
                            android:drawableStart="@drawable/ic_assessment"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/level"
                            app:helperTextForLevel="@{user.level}" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Club Management Section (All Users) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/clubManagementSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/surface_container_high"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/outline_variant"
                    app:strokeWidth="1dp"
                    app:visibleIf="@{user != null}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="8dp"
                            android:text="@string/club_management"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/on_surface_variant" />

                        <!-- Club Members -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/outline_variant"/>

                        <LinearLayout
                            android:id="@+id/btnClubMembers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_people"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/club_members"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/on_surface" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/on_surface_variant" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mentors Section (MEMBER only) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mentorsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/surface_container_high"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/outline_variant"
                    app:strokeWidth="1dp"
                    app:visibleIf="@{user != null &amp;&amp; user.role.name == `MEMBER`}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="8dp"
                            android:text="@string/mentors"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/on_surface_variant" />

                        <!-- Mentors List -->
                        <LinearLayout
                            android:id="@+id/mentorsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="8dp">

                            <!-- Dynamic mentor items will be added here -->

                        </LinearLayout>

                        <!-- No Mentors Message -->
                        <TextView
                            android:id="@+id/tvNoMentors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:text="@string/no_mentors_assigned"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/on_surface_variant"
                            android:gravity="center"
                            android:visibility="gone" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingVertical="12dp"
                    android:text="@string/logout"
                    android:textAllCaps="false"
                    android:textColor="@color/red_500"
                    android:enabled="@{!viewModel.uiState.isLoading}"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@color/red_500"
                    app:rippleColor="@color/red_100"
                    app:strokeColor="@color/red_500"
                    app:strokeWidth="1.5dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
