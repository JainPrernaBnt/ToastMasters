<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".presentation.auth.SignUpFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="32dp">

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:text="Create Account"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <!-- Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_full_name"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_email"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_phone"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addressInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_address"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_location_on"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:maxLines="2"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gender -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/genderInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_gender"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="?attr/colorOnSurface">

                <AutoCompleteTextView
                    android:id="@+id/genderAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Male" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Joined Date -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/joinedDateInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_joined_date"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_calendar_today"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/joinedDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="01/01/2023" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Toastmasters ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/toastmastersIdInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_toastmasters_id"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_badge"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/toastmastersIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Toastmasters ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/levelInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_level"
                app:startIconDrawable="@drawable/ic_level"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/levelEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Role Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_large"
                app:cardBackgroundColor="@color/gray_100"
                app:cardElevation="0dp"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Select Your Role"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/roleInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_role"
                        app:errorEnabled="true"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:hintTextColor="?attr/colorOnSurface">

                        <RadioGroup
                            android:id="@+id/roleRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/roleVpEducation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:checked="false"
                                android:text="@string/role_vp_education"
                                android:textColor="?attr/colorOnSurface"
                                android:buttonTint="?attr/colorPrimary" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/roleMember"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/role_member"
                                android:textColor="?attr/colorOnSurface"
                                android:buttonTint="?attr/colorPrimary" />
                        </RadioGroup>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Club ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/clubIdInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_club_id"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_group"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clubIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium"
                android:hint="@string/hint_password"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:endIconMode="password_toggle"
                app:endIconTint="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_large"
                android:hint="@string/hint_confirm_password"
                app:boxStrokeColor="?attr/colorOnSurface"
                app:endIconMode="password_toggle"
                app:endIconTint="?attr/colorOnSurface"
                app:hintTextColor="?attr/colorOnSurface"
                app:startIconDrawable="@drawable/ic_lock_outline"
                app:startIconTint="?attr/colorOnSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mentor Assignment Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_large"
                app:cardBackgroundColor="@color/gray_100"
                app:cardElevation="0dp"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_medium">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_medium"
                        android:text="@string/title_mentor_assignment"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Has Mentor Toggle -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/hasMentorSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/has_mentor"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Mentor Input (Initially hidden) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mentorInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_medium"
                        android:hint="@string/hint_enter_mentor_name"
                        android:visibility="gone"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="?attr/colorOnSurface">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mentorEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signUpButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/primary"
                android:text="@string/title_sign_up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:elevation="0dp" />

            <!-- Already have an account? -->
            <TextView
                android:id="@+id/loginTextView"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/already_have_account"
                android:textColor="@color/primary"
                android:paddingVertical="12dp" />

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.Material3.ProgressIndicator.Circular.Indeterminate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_large"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
