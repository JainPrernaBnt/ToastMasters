<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Card.Meeting"
    app:cardBackgroundColor="@color/surface_container_highest"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSpeakerTitle"
            style="@style/TextAppearance.ToastMasters.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_mic"
            android:drawableTint="@color/primary"
            android:text="@string/speaker_details"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Speech Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSpeechTitleLabel"
            style="@style/TextAppearance.ToastMasters.LabelMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/speech_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpeakerTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSpeechTitle"
            style="@style/TextAppearance.ToastMasters.BodyLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/on_surface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpeechTitleLabel"
            tools:text="The Power of Effective Communication" />

        <!-- Info Row -->
        <LinearLayout
            android:id="@+id/infoRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpeechTitle">

            <!-- Level -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipLevel"
                style="@style/Chip.Meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:chipIcon="@drawable/ic_level"
                app:chipIconTint="@color/primary"
                tools:text="Level 3" />

            <!-- Track -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrack"
                style="@style/Chip.Meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:chipIcon="@drawable/ic_track"
                app:chipIconTint="@color/secondary"
                tools:text="DL" />
                
            <!-- Speech Time -->
            <com.google.android.material.chip.Chip
                android:id="@+id/tvSpeechTime"
                style="@style/Chip.Meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_time"
                app:chipIconTint="@color/tertiary"
                tools:text="5-7 min" />
        </LinearLayout>

        <!-- Project Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/projectCard"
            style="@style/Card.Info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surface_container_high"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoRow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/project_details"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.ToastMasters.LabelSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipProjectNumber"
                        style="@style/Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:chipBackgroundColor="@color/surface_variant"
                        tools:text="2" />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvProjectTitle"
                    style="@style/TextAppearance.ToastMasters.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/on_surface"
                    android:textStyle="italic"
                    tools:text="Researching and Presenting" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/objectives"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvObjectives"
                    style="@style/TextAppearance.ToastMasters.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    tools:text="• Research a topic\n• Organize the speech\n• Present the speech" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
