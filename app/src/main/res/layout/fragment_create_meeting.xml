<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:dividerPadding="16dp"
            android:paddingBottom="88dp">

            <!-- Meeting Forms Container -->
            <LinearLayout
                android:id="@+id/meetingFormsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Meeting forms will be added here programmatically -->
            </LinearLayout>

            <!-- Add Another Meeting Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addAnotherMeetingButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_another_meeting"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconTint="?attr/colorPrimary"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>
    </ScrollView>

    <!-- Create Meetings Button (Fixed at Bottom) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/createMeetingsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:paddingVertical="12dp"
        android:text="@string/create_meeting"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_check_circle"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        android:textColor="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
