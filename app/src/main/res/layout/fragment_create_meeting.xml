<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/surface_container"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_new_meeting"
                        android:textColor="@color/on_surface" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/schedule_meeting_description"
                        android:textColor="@color/on_surface_variant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Meeting Forms Container -->
            <LinearLayout
                android:id="@+id/meetingFormsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <!-- Add Another Meeting Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/surface_container"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:rippleColor="@color/primary_container"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addAnotherMeetingButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="14dp"
                    android:text="@string/add_another_meeting"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:iconTint="@color/primary"
                    app:iconPadding="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="12dp"
                    app:rippleColor="@color/primary_container"
                    app:strokeColor="@color/outline"
                    app:strokeWidth="1dp"
                    android:textColor="@color/primary" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Create Meetings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/createMeetingsButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:paddingVertical="16dp"
                android:text="@string/create_meeting"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/on_primary"
                app:iconPadding="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/on_primary"
                app:rippleColor="@color/primary_container"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom gradient fade -->
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_gradient"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
