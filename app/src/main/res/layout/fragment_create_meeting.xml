<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:clipToPadding="false"
        android:layout_marginBottom="80dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Meeting Forms Container -->
            <LinearLayout
                android:id="@+id/meetingFormsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Meeting forms will be added here programmatically -->
            </LinearLayout>

            <!-- Add Another Meeting Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline_variant">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addAnotherMeetingButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/add_another_meeting"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@color/purple_500"
                    android:textColor="@color/purple_500"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="2dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Create Meetings Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/createMeetingButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline_variant">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createMeetingsButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/create_meeting"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/purple_500"
                    android:focusable="true"
                    android:clickable="true"
                    android:importantForAccessibility="yes"
                    android:contentDescription="@string/create_meeting" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
