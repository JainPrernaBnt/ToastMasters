<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMember"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/surface_container"
    app:cardBackgroundColor="@color/surface_container"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/outline_variant"
    app:strokeWidth="1dp"
    app:rippleColor="@color/primary_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMemberName"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                tools:text="John Doe" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/edit"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:visibility="gone"
                app:icon="@drawable/ic_edit"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp"
                app:rippleColor="@color/primary"
                app:iconTint="@color/primary"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />

        </LinearLayout>

        <!-- Preferred Roles -->
        <TextView
            android:id="@+id/tvPreferredRolesLabel"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/preferred_roles"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/_12ssp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPreferredRoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_scrollFlags="scroll"
                app:singleLine="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/toastmaster"
                    app:chipMinHeight="28dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="12dp"
                    app:chipEndPadding="12dp"
                    app:chipBackgroundColor="@color/surface_variant"
                    app:chipStrokeColor="@color/outline"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="8dp"
                    app:rippleColor="@color/primary"
                    android:textColor="@color/on_surface"
                    android:textSize="12sp"
                    android:letterSpacing="0.01"
                    app:checkedIconTint="@color/primary"
                    app:checkedIcon="@drawable/ic_check"
                    app:closeIconTint="@color/on_surface_variant" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/gray_300" />

        <TextView
            android:id="@+id/tvRecentRolesLabel"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/recent_roles"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/_12ssp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentRoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_recent_role" />

            <TextView
                android:id="@+id/tvNoRecentRoles"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/no_recent_roles"
                android:textColor="@color/gray_500"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/gray_300" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/assign_role"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/_13ssp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRole"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/select_role"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:startIconDrawable="@drawable/ic_work">

            <AutoCompleteTextView
                android:id="@+id/actvRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_role"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>
        <!-- Selected Roles -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSelectedRoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacing="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:singleLine="true"
                app:singleSelection="false" />
        </HorizontalScrollView>

        <!-- Evaluator Selection Prompt -->
        <include
            android:id="@+id/evaluatorPrompt"
            layout="@layout/evaluator_selection_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Speaker Assignment Display -->
        <include
            android:id="@+id/speakerAssignmentDisplay"
            layout="@layout/speaker_assignment_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbAssignBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/assign_backup"
            android:text="@string/assign_backup"
            android:textColor="@color/primary"
            android:textSize="15sp"
            app:buttonTint="@color/primary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBackupMember"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="@string/select_backup_member"
            android:visibility="gone"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:startIconDrawable="@drawable/ic_person">

            <AutoCompleteTextView
                android:id="@+id/actvBackupMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_backup_member"
                android:inputType="none"
                tools:text="Jane Smith" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAssignRole"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/assign_role"
            android:visibility="gone"
            app:backgroundTint="@color/primary"
            app:icon="@drawable/ic_add"
            app:iconGravity="start"
            app:iconTint="@android:color/white" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
