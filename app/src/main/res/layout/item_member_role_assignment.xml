<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMember"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMemberName"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textColor="@color/on_surface"
                tools:text="John Doe" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Preferred Roles -->
        <TextView
            android:id="@+id/tvPreferredRolesLabel"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/preferred_roles"
            android:textColor="@color/on_surface_medium" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupPreferredRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:singleLine="true"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toastmaster"
                app:chipMinHeight="24dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="8dp" />


        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tvRecentRolesLabel"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/recent_roles"
            android:textColor="@color/on_surface_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recent_role" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/assign_role"
            android:textColor="@color/on_surface_medium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRole"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="@string/select_role"
            app:startIconDrawable="@drawable/ic_work">

            <AutoCompleteTextView
                android:id="@+id/actvRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:text="Toastmaster" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbAssignBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/assign_backup"
            app:buttonTint="@color/purple_500" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBackupMember"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:hint="@string/select_backup_member"
            app:startIconDrawable="@drawable/ic_person">

            <AutoCompleteTextView
                android:id="@+id/actvBackupMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:text="Jane Smith" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvAssignedRolesLabel"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/assigned_roles"
            android:textColor="@color/on_surface_medium"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutAssignedRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
