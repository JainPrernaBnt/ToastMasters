<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Meeting Title -->
        <TextView
            android:id="@+id/tvMeetingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/meeting_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="?attr/colorOnSurface"
            tools:text="Weekly Club Meeting" />

        <!-- Meeting Date & Time -->
        <TextView
            android:id="@+id/tvMeetingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:drawableTint="@color/primary"
            android:paddingBottom="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="Fri, Oct 20, 2023 â€¢ 7:00 PM - 9:00 PM" />

        <TextView
            android:id="@+id/tvMeetingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="8dp"
            android:drawableTint="@color/primary"
            android:paddingBottom="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="7:00 PM - 9:00 PM" />

        <!-- Meeting Location -->
        <TextView
            android:id="@+id/tvMeetingLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="8dp"
            android:drawableTint="@color/primary"
            android:paddingBottom="16dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="Main Hall, Toastmasters Club" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorOutline" />

        <!-- Availability Section -->
        <TextView
            android:id="@+id/tvYourAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/your_availability"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:padding="4dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAvailable"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:text="@string/available"
                    app:chipBackgroundColor="@color/available_chip_background"
                    app:chipStrokeColor="@color/available_chip_stroke"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/available_chip_ripple"
                    app:checkedIcon="@null"
                    app:closeIconEnabled="false"
                    app:ensureMinTouchTargetSize="true"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Chip"
                    app:textStartPadding="16dp"
                    app:textEndPadding="16dp"
                    app:chipMinHeight="40dp"
                    android:stateListAnimator="@animator/chip_state_list_animator" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNotAvailable"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:text="@string/member_not_available"
                    app:chipBackgroundColor="@color/unavailable_chip_background"
                    app:chipStrokeColor="@color/unavailable_chip_stroke"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/unavailable_chip_ripple"
                    app:checkedIcon="@null"
                    app:closeIconEnabled="false"
                    app:ensureMinTouchTargetSize="true"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Chip"
                    app:textStartPadding="16dp"
                    app:textEndPadding="16dp"
                    app:chipMinHeight="40dp"
                    android:stateListAnimator="@animator/chip_state_list_animator" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNotConfirmed"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:text="@string/member_not_confirmed"
                    app:chipBackgroundColor="@color/not_confirmed_chip_background"
                    app:chipStrokeColor="@color/not_confirmed_chip_stroke"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/not_confirmed_chip_ripple"
                    app:checkedIcon="@null"
                    app:closeIconEnabled="false"
                    app:ensureMinTouchTargetSize="true"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Chip"
                    app:textStartPadding="16dp"
                    app:textEndPadding="16dp"
                    app:chipMinHeight="40dp"
                    android:stateListAnimator="@animator/chip_state_list_animator" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Preferred Roles Section -->
        <TextView
            android:id="@+id/tvPreferredRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/preferred_roles"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRoleInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:visibility="gone"
            tools:text="Select your preferred roles in order of priority.The first role you select will be your highest priority." />

        <TextView
            android:id="@+id/tvNoRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_roles_available"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:visibility="gone"
            tools:visibility="visible" />

        <HorizontalScrollView
            android:id="@+id/rolesScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scrollbars="none"
            android:fillViewport="true"
            android:visibility="visible">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgRoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:minHeight="48dp"
                android:padding="8dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:selectionRequired="false"
                app:singleLine="false"
                app:singleSelection="false" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            tools:text="You can update your availability until 5:00 PM." />

        <TextView
            android:id="@+id/tvAvailabilityStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvSelectedRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:visibility="gone" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Edit Button (initially hidden) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/edit"
                android:visibility="gone"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="?attr/colorPrimary" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/submit"
                app:icon="@drawable/ic_done"
                android:textColor="@color/primary"
                app:iconGravity="textStart"
                android:backgroundTint="@color/primary_light"
                app:iconPadding="8dp"
                app:iconTint="@color/primary" />

            <!-- Backout Button (initially hidden) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackout"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Backout"
                android:visibility="gone"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/red_500"
                app:strokeColor="@color/red_500"
                app:strokeWidth="1dp"
                android:textColor="@color/red_500"/>
        </LinearLayout>

        <!-- Backout Reason Input (initially hidden) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBackoutReason"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/red_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1.5dp"
            android:hint="Reason for backout (optional)"
            app:startIconDrawable="@drawable/ic_description"
            app:startIconTint="@color/red_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBackoutReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="1"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="@color/gray_500" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Backout Submit Button (initially hidden) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitBackout"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/red_500"
            android:text="Submit Backout"
            android:textColor="@color/white"
            android:visibility="gone"
            app:icon="@drawable/ic_done"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
