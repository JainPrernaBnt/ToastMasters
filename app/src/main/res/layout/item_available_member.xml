<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/ripple_list_item">

    <!-- Member Name and Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_person"
            android:layout_marginEnd="12dp"
            app:tint="@color/success" />

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="John Doe"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available"
            android:textSize="12sp"
            android:textColor="@color/success"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Preferred Roles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tvPreferredRolesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferred_roles_label"
            android:textSize="14sp"
            android:textColor="@color/on_surface_medium"
            android:visibility="gone"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupPreferredRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="4dp"
            app:chipSpacingVertical="4dp"
            android:visibility="gone">

            <!-- Chips will be added programmatically -->

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speaker"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/purple_500"
                android:textColor="@color/white"
                app:chipMinHeight="24dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluator"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/purple_500"
                android:textColor="@color/white"
                app:chipMinHeight="24dp" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

</LinearLayout>
