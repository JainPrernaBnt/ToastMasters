<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- TIME -->
        <TextView
            android:id="@+id/tvTime"
            style="@style/Cell.Time"
            android:text="10:00 AM"/>

        <!-- Card Sequence -->
        <LinearLayout
            style="@style/Cell.CardSequence"
            android:padding="1dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvGreenTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:gravity="center"
                android:text="2"/>

            <TextView
                android:id="@+id/tvYellowTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="2"/>

            <TextView
                android:id="@+id/tvRedTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- ACTIVITY -->
        <TextView
            android:id="@+id/tvActivity"
            style="@style/Cell.Activity"
            android:text="Activity Name"/>

        <!-- PRESENTER -->
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/etPresenter"
            style="@style/Cell.Presenter"
            android:hint="Select Presenter"
            android:inputType="none"/>

        <!-- DELETE -->
        <ImageButton
            android:id="@+id/deleteButton"
            style="@style/Cell.Delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete"
            android:tint="@color/red_500"/>
    </LinearLayout>
</HorizontalScrollView>
