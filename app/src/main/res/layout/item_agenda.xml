<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/normalItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="0dp"
        android:orientation="horizontal">

        <!-- TIME -->
        <TextView
            android:id="@+id/tvTime"
            style="@style/Cell.Time"
            android:text="10:00 AM" />

        <!-- Card Sequence -->
        <LinearLayout
            style="@style/Cell.CardSequence"
            android:padding="1dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvGreenTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvYellowTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvRedTime"
                android:layout_width="0dp"
                android:padding="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:gravity="center"
                android:text="0"
                android:visibility="gone"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ACTIVITY (includes speaker details) -->
        <FrameLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border_no_padding"
            android:padding="0dp">

            <!-- Activity Text (centered for non-speakers) -->
            <TextView
                android:id="@+id/tvActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Activity Name" />

            <!-- Speaker Details Section (only visible for speakers) -->
            <LinearLayout
                android:id="@+id/speakerDetailsLayout"
                android:layout_width="180dp"
                android:padding="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSpeakerTrack"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/speaker_detail_border"
                    android:text="" />

                <TextView
                    android:id="@+id/tvSpeakerLevel"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/speaker_detail_border"
                    android:text="" />

                <TextView
                    android:id="@+id/tvSpeakerProject"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/speaker_detail_border"
                    android:text="" />
            </LinearLayout>

            <!-- Activity Text for speakers (positioned to the right) -->
            <TextView
                android:id="@+id/tvActivitySpeaker"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:gravity="center"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="" />
        </FrameLayout>

        <!-- PRESENTER -->
        <TextView
            android:id="@+id/tvPresenter"
            style="@style/Cell.Presenter"
            android:text="10:00 AM" />
    </LinearLayout>

    <!-- Time Break Layout -->
    <LinearLayout
        android:id="@+id/timeBreakLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTimeBreakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="5 MINUTES BREAK" />
    </LinearLayout>

    <!-- Session Header Layout -->
    <LinearLayout
        android:id="@+id/sessionHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSessionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="SESSION TITLE" />
    </LinearLayout>
</LinearLayout>
