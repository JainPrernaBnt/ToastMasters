<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <!-- TIME -->
        <TextView
            android:id="@+id/tvTime"
            style="@style/Cell.Time"
            android:text="10:00 AM" />

        <!-- Card Sequence -->
        <LinearLayout
            style="@style/Cell.CardSequence"
            android:padding="1dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvGreenTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvYellowTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvRedTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:gravity="center"
                android:text="0"
                android:visibility="gone"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ACTIVITY -->
        <TextView
            android:id="@+id/tvActivity"
            style="@style/Cell.Activity"
            android:text="Activity Name" />

        <!-- PRESENTER -->
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/etPresenter"
            style="@style/Cell.Presenter"
            android:hint="Select Presenter"
            android:inputType="none" />


</LinearLayout>
