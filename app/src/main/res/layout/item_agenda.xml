<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/normalItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <!-- TIME -->
        <TextView
            android:id="@+id/tvTime"
            style="@style/Cell.Time"
            android:text="10:00 AM" />

        <!-- Card Sequence -->
        <LinearLayout
            style="@style/Cell.CardSequence"
            android:padding="1dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvGreenTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvYellowTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tvRedTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:gravity="center"
                android:text="0"
                android:visibility="gone"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ACTIVITY -->
        <TextView
            android:id="@+id/tvActivity"
            style="@style/Cell.Activity"
            android:text="Activity Name" />

        <!-- PRESENTER -->
        <TextView
            android:id="@+id/tvPresenter"
            style="@style/Cell.Presenter"
            android:text="10:00 AM" />
    </LinearLayout>

    <!-- Time Break Layout -->
    <LinearLayout
        android:id="@+id/timeBreakLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTimeBreakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="5 MINUTES BREAK" />
    </LinearLayout>

    <!-- Session Header Layout -->
    <LinearLayout
        android:id="@+id/sessionHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSessionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="SESSION TITLE" />
    </LinearLayout>
</LinearLayout>
