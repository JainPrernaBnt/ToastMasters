<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!-- Drag handle -->
    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_drag_handle"
        app:layout_constraintBottom_toBottomOf="@id/agendaCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/agendaCard"
        app:tint="@color/purple_500"
        tools:ignore="ContentDescription" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/agendaCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dragHandle"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/purple_100"
        app:strokeWidth="0.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Time Picker Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/timePickerButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_access_time"
                android:drawablePadding="8dp"
                android:drawableTint="@color/purple_500"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:text="Select Time"
                android:textColor="@color/purple_700"
                app:cornerRadius="8dp"
                app:iconGravity="start"
                app:layout_constraintEnd_toStartOf="@+id/deleteButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/purple_200"
                app:strokeWidth="1dp" />

            <!-- Delete Button -->

            <!-- Card Sequence Title -->
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete item"
                android:src="@drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/red_500" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cardSequenceLabel"
                style="@style/TextAppearance.Material3.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Card Sequence"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/timePickerButton"
                app:layout_constraintTop_toBottomOf="@id/timePickerButton" />

            <!-- Card Time Inputs Row -->
            <LinearLayout
                android:id="@+id/cardInputsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/timePickerButton"
                app:layout_constraintTop_toBottomOf="@id/cardSequenceLabel">

                <!-- Green Card Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/greenCardLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:hint="Green (mins)"
                    app:boxStrokeColor="@color/green_500"
                    app:endIconDrawable="@drawable/ic_time"
                    app:endIconTint="@color/green_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/greenCardInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:text="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Yellow Card Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/yellowCardLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:hint="Yellow (mins)"
                    app:boxStrokeColor="@color/yellow_500"
                    app:endIconDrawable="@drawable/ic_time"
                    app:endIconTint="@color/yellow_700">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/yellowCardInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:text="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Red Card Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/redCardLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:hint="Red (mins)"
                    app:boxStrokeColor="@color/red_500"
                    app:endIconDrawable="@drawable/ic_time"
                    app:endIconTint="@color/red_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/redCardInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="14sp"
                        tools:text="3" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Activity Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activityLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Activity"
                app:boxStrokeColor="@color/purple_500"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/timePickerButton"
                app:layout_constraintTop_toBottomOf="@id/cardInputsRow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activityInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Presenter Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/presenterLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Presenter"
                app:boxStrokeColor="@color/blue_500"
                app:endIconDrawable="@drawable/ic_person"
                app:endIconTint="@color/blue_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/activityLayout"
                app:layout_constraintTop_toBottomOf="@id/activityLayout">

                <AutoCompleteTextView
                    android:id="@+id/presenterInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
