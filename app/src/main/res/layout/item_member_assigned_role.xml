<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        style="@style/Card.Meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Theme -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMeetingTheme"
                style="@style/TextAppearance.ToastMasters.HeadlineSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/on_surface"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lineHeight="24sp"
                tools:text="The Power of Effective Communication" />

            <!-- Venue -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMeetingVenue"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primary"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:textColor="@color/on_surface_medium"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMeetingTheme"
                tools:text="Hinjewadi Phase 1, Tech Park, Conference Room A" />

            <!-- Date and Time Row -->
            <LinearLayout
                android:id="@+id/dateTimeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMeetingVenue">

                <!-- Date -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDate"
                    style="@style/Chip.Meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:chipIcon="@drawable/ic_calendar"
                    tools:text="Mon, Aug 28" />

                <!-- Time -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTime"
                    style="@style/Chip.Meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:chipIcon="@drawable/ic_time"
                    tools:text="6:30 - 8:30 PM" />
            </LinearLayout>

            <!-- Role Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipRole"
                style="@style/Chip.Role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:chipIcon="@drawable/ic_person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateTimeLayout"
                tools:text="Speaker" />

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/chipRole">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFillDetails"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:paddingVertical="10dp"
                    android:text="@string/fill_details"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_edit"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/primary"
                    app:rippleColor="@color/primary_alpha_12"
                    app:strokeColor="@color/outline"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgenda"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:paddingVertical="10dp"
                    android:text="@string/agenda"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_agenda"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="@color/white_alpha_24"
                    tools:visibility="visible" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>