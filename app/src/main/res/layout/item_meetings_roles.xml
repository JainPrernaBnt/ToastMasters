<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Meeting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Member Name with Icon -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMemberName"
            style="@style/TextAppearance.ToastMasters.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_person"
            android:ellipsize="end"
            android:maxLines="1"
            app:drawableTint="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Prerna Jain" />

        <!-- Assigned Role Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipRole"
            style="@style/Chip.Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.ToastMasters.LabelMedium"
            app:chipIconTint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMemberName"
            tools:text="Speaker 1" />

        <!-- Evaluator Section (initially hidden) -->
        <LinearLayout
            android:id="@+id/layoutEvaluator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipRole">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/evaluators"
                android:textAppearance="@style/TextAppearance.ToastMasters.BodyMedium"
                android:textColor="@color/on_surface_medium"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEvaluator"
                style="@style/TextAppearance.ToastMasters.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/on_surface"
                tools:text="• Aditi Pawar (Evaluator 1)\n• John Doe (Evaluator 2)" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
