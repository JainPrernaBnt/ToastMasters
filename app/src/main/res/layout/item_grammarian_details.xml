<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Meeting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/surface_container_highest"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvGrammarianTitle"
            style="@style/TextAppearance.ToastMasters.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTint="@color/primary"
            android:text="@string/grammarian_details"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Word of the Day Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wordCard"
            style="@style/Card.Info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surface_container_high"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGrammarianTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/word_of_the_day"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWordOfTheDay"
                    style="@style/TextAppearance.ToastMasters.HeadlineSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/on_surface"
                    android:textStyle="bold"
                    tools:text="Eloquent" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/meaning"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWordMeaning"
                    style="@style/TextAppearance.ToastMasters.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    tools:text="Fluent or persuasive in speaking or writing." />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/examples"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWordExamples"
                    style="@style/TextAppearance.ToastMasters.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:textIsSelectable="true"
                    tools:text="• She delivered an eloquent speech that moved the audience.
• His writing is both eloquent and persuasive." />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Idiom of the Day Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idiomCard"
            style="@style/Card.Info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surface_container_high"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wordCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/primary"
                    android:text="@string/idiom_phrase_of_the_day"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIdiomOfTheDay"
                    style="@style/TextAppearance.ToastMasters.HeadlineSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/on_surface"
                    android:textStyle="bold"
                    tools:text="Break the ice" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/meaning"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIdiomMeaning"
                    style="@style/TextAppearance.ToastMasters.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    tools:text="To do or say something to relieve tension or get conversation going in a strained situation" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.ToastMasters.LabelSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/usage"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIdiomExamples"
                    style="@style/TextAppearance.ToastMasters.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:textIsSelectable="true"
                    tools:text="• He told a funny joke to break the ice at the beginning of his speech.
• The team-building activities helped break the ice among the new members." />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
