<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.vp.agenda.AgendaTableFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Horizontal Scrollable Header Row -->
        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TIME -->
                <TextView
                    style="@style/Cell.Time"
                    android:text="TIME"
                    android:textStyle="bold" />

                <!-- Card Sequence -->
                <LinearLayout
                    style="@style/Cell.CardSequence"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="Card Sequence"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#8BC34A"
                            android:gravity="center"
                            android:text="Green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFEB3B"
                            android:gravity="center"
                            android:text="Yellow" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F44336"
                            android:gravity="center"
                            android:text="Red" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ACTIVITY -->
                <TextView
                    style="@style/Cell.Activity"
                    android:text="ACTIVITY"
                    android:textStyle="bold" />

                <!-- PRESENTER -->
                <TextView
                    style="@style/Cell.Presenter"
                    android:text="PRESENTER"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>


        <!-- RecyclerView below header -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/agendaRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="88dp"
            tools:itemCount="10"
            tools:listitem="@layout/item_agenda" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:text="@string/btn_export_pdf"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/white"
            app:rippleColor="@color/purple_200"
            app:strokeColor="@color/purple_700"
            app:strokeWidth="2dp" />

        <!-- Floating Action Button (fixed bottom-end) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            android:contentDescription="Add Item"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/purple_500"
            app:rippleColor="@color/purple_200"
            app:tint="@color/white" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
