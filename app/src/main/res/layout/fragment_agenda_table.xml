<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.vp.agenda.AgendaTableFragment">

    <!-- Main ScrollView that contains the entire table -->
    <HorizontalScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TIME -->
                <TextView
                    style="@style/Cell.Time"
                    android:text="TIME"
                    android:textStyle="bold" />

                <!-- Card Sequence -->
                <LinearLayout
                    style="@style/Cell.CardSequence"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="Card Sequence"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#8BC34A"
                            android:gravity="center"
                            android:text="Green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#FFEB3B"
                            android:gravity="center"
                            android:text="Yellow" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F44336"
                            android:gravity="center"
                            android:text="Red" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ACTIVITY -->
                <TextView
                    style="@style/Cell.Activity"
                    android:text="ACTIVITY"
                    android:textStyle="bold" />

                <!-- PRESENTER -->
                <TextView
                    style="@style/Cell.Presenter"
                    android:text="PRESENTER"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- RecyclerView for agenda items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/agendaRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                android:paddingBottom="88dp"
                android:overScrollMode="never" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom bar with export button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/publishAgendaButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Publish Agenda to Members"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp"
            app:iconGravity="textStart"
            app:rippleColor="@color/green_500"
            app:strokeColor="@color/green_700"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <!-- FAB positioned above the export button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddItem"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="140dp"
        android:contentDescription="Add item"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:elevation="6dp"
        app:maxImageSize="24dp"
        app:rippleColor="@color/primary_light"
        app:showMotionSpec="@animator/fab_show_motion_spec"
        app:hideMotionSpec="@animator/fab_hide_motion_spec"
        app:useCompatPadding="true" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
