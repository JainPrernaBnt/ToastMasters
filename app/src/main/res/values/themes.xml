<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme that inherits from the Material Components theme -->
    <style name="Base.Theme.ToastMasters" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:statusBarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Color attributes -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.MaterialComponents.ExtendedFloatingActionButton</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.MaterialComponents.CircularProgressIndicator</item>

        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MaterialComponents.LargeComponent</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.ToastMasters" parent="Base.Theme.ToastMasters" />

    <!-- AppBar overlay styles -->
    <style name="Theme.ToastMasters.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.ToastMasters.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Floating Action Button -->
    <style name="Widget.Material3.FloatingActionButton" parent="">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
    </style>

    <!-- Extended FAB Style -->
    <style name="Widget.Material3.ExtendedFloatingActionButton" parent="">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Circular Progress Indicator -->
    <style name="Widget.Material3.ProgressIndicator.Circular.Indeterminate" parent="">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorPrimaryContainer</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorSize">48dp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.009375</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:letterSpacing">0.0178571</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Caption Text Appearance -->
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:letterSpacing">0.0333333</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Circle Image View Style -->
    <style name="CircleImageView" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/circle_background</item>
    </style>
</resources>